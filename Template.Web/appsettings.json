{
  "Urls": "http://0.0.0.0:8080",

  "AllowedHosts": "*",

  //"Kestrel": {
  //  "Certificates": {
  //    "Default": {
  //      "Path": "sample.pfx",
  //      "Password": "sample"
  //    }
  //  }
  //},

  "FeatureManagement": {
    "CustomOption": true
  },

  "RateLimit": {
    "Window": 1000,
    "PermitLimit": 1000,
    "QueueLimit": 0
  },

  "Server": {
    "LongTimeThreshold": 10000
  },

  "Serilog": {
    "Using": [
      "Serilog.Sinks.File",
      "Serilog.Enrichers.Environment"
    ],
    "Enrich": [ "FromLogContext", "WithThreadId", "WithMachineName" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "..\\Log\\Template.Web.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:HH:mm:ss.fff} {Level:u4} {MachineName} [{RequestId}] [{ThreadId}] {RequestPath} - {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
